<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <ImageView
            android:id="@+id/car_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
        />

        <TextView
            android:id="@+id/view_reg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/car_image_view"
            android:text="Registration number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_reg_number"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/car_image_view"
            android:text="Brand"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/car_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_reg_number"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:text="Abvailable"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <ImageView
            android:id="@+id/imageViewCover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/ic_person_done" />

        <TextView
            android:id="@+id/employee_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewCover"
            android:text="First name"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/employee_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/employee_first_name"
            android:layout_marginLeft="5dp"
            android:text="Last name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/employee_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_first_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageViewCover"
            android:text="email"
            android:textSize="10sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>